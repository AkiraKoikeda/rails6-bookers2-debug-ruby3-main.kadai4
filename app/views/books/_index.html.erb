<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td></td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td class=<%= "favorite-btn-"+book.id.to_s %>>
          <%= render 'favorites/favorite-btn', book: book %>
        </td>
        <td>
          <%= render "books/static_rate", book: book %>
        </td>
        <td><%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %></td>
        <td>閲覧数:<%= book.read_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>