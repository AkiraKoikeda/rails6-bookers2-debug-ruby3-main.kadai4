
<% if @range == "User" %>
    <h2>Users search for "<%= @word %>"</h2>
    <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td></td>
                        <td><%= user.name %></td>
                    </tr>
                <% end %>
            </tbody>
        <% else %>
        <h2>Books search for "<%= @word %>"</h2>
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>
            <tbody>
                <% @books.each do |book| %>
                    <tr>
                        <td></td>
                        <td><%= book.title %></td>
                        <td><%= book.body %></td>
                    </tr>
                <% end %>
            </tbody>
        <% end %>
    </table>